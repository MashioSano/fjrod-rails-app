<%= form_with(model: report, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control", rows: 10 %>
  </div>

  <%= form.submit class: "btn btn-primary mr-3"%>
<% end %>
