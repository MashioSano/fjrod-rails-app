<div class="user-profile mt-3">
  <% if @user.image.attached? %>
    <%= image_tag @user.image, class: 'user-icon' %>
  <% end %>
  <% if @user.followed_by?(current_user) %>
    <%= link_to "フォローを解除", user_relationships_path(@user.id), method: :delete %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
  <% end %>
  <%= @user.id %>
  <div class="user-info">
    <%= @user.email %>
    <%= @user.bio %>
  </div>
</div>
<% if current_user == @user %>
  <%= link_to t("devise.shared.links.edit"),  edit_user_registration_path(@user), class:"mt-2 btn btn-success" %>
<% end %>
