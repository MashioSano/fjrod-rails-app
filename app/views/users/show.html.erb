<div class="user-profile mt-3">
  <% if @user.image.attached? %>
    <%= image_tag @user.image, class: 'user-icon' %>
  <% end %>
  <div class="user-info">
    <%= @user.email %>
    <%= @user.bio %>
  </div>
</div>
<% if current_user == @user %>
  <%= link_to t("devise.shared.links.edit"),  edit_user_registration_path(@user), class:"mt-2 btn btn-success" %>
<% end %>
