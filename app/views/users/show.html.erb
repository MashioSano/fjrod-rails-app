<div class="user-profile">
  <% if @user.image.attached? %>
    <%= image_tag @user.image, class: 'user-icon' %>
  <% end %>

  <div class="user-info">
    <div class='user-name'>
      <%= @user.name %>
    </div>
    <div class='user-follow'>
      <div id='follow-btn-box'>
        <% if (current_user != @user) && user_signed_in? %>
          <% if @user.followed_by?(current_user) %>
            <%= render 'users/unfollow' %>
          <% else %>
            <%= render 'users/follow' %>
          <% end %>
        <% end %>
      </div>
      <div class='user-follow-info'>
        <div class='follower-count'>
          <%= link_to @user.followers.count,  user_followers_path(@user) %> <%= t 'users.follower' %>
        </div>
        <div class='following-count'>
          <%= link_to @user.followings.count, user_followings_path(@user) %> <%= t 'users.following' %>
        </div>
      </div>
    </div>
  </div>
</div>

<% if current_user == @user %>
  <%= link_to t("devise.shared.links.edit"),  edit_user_registration_path(@user), class:"mt-4 btn btn-success" %>
<% end %>
