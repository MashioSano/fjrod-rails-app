<p>
  <strong><%= t 'books.title' %></strong>
  <%= @book.title %>
</p>

<p>
  <strong><%= t 'books.memo' %></strong>
  <%= @book.memo %>
</p>

<% if @book.picture.present? %>
  <strong><%= t 'books.picture' %></strong>
  <%= image_tag(@book.picture_url, class: 'book_picture') %>
<% end %>

<%= link_to t('action_link.index', model: Comment.model_name.human), book_comments_path(@book) %>

<%= link_to t('action_link.edit', model: Book.model_name.human), edit_book_path(@book) %>
